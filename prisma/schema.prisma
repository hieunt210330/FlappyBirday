// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
}

model User {
  id          Int            @id @default(autoincrement())
  email       String         @unique
  name        String
  turnLeft    Int            @default(3)
  scores      Score[]
  checkIn     CheckIn?
  puzzleCount Int            @default(0)
  vouchers    Voucher[]
  maxScore    Int            @default(0)
  feedbacks   Feedback[]
}

model Feedback {
  id        Int      @id @default(autoincrement())
  userId    Int
  message   String
  response  String?
  createdAt DateTime @default(now()) 
  user      User     @relation(fields: [userId], references: [id])
}

model Voucher {
  id                  Int       @id @default(autoincrement())
  code                String
  discountPercentage  Float?    
  maxDiscountValue    Int?      
  minOrderValue       Int?      
  discountValue       Int?      
  expiryDate          DateTime?
  used                Boolean   @default(false)
  userId              Int
  user                User      @relation(fields: [userId], references: [id])
}

model Score {
  id        Int      @id @default(autoincrement())
  score     Int
  userId    Int
  createdAt DateTime @default(now()) 
  user      User     @relation(fields: [userId], references: [id])
}

model CheckIn {
  id           Int            @id @default(autoincrement())
  userId       Int            @unique
  user         User           @relation(fields: [userId], references: [id])
  streakThree  DateTime? 
  streakSeven  DateTime?
  streakTwelve DateTime?
  checkInDates CheckInDate[]
}

model CheckInDate {
  id         Int      @id @default(autoincrement())
  createdAt  DateTime @default(now())
  checkInId  Int
  checkIn    CheckIn  @relation(fields: [checkInId], references: [id])
}
